<br />

<div class="booyah-box col-10 offset-1 text-center">
    <h1 class="dashboard-header">What I'm Learning</h1>
    <br>
    <% current_user.enrolled_courses.each do |course| %>
    <h3 class="text-center">
        <%= link_to course.title, course_path(course) %>
    </h3>
    <br>
    <%= image_tag course.image.url, class: 'img-fluid' %>
    <br>
    <div class="row">
        <div class="col-12 text-center">
        <br>
            <%= course.description %>
            <br>
        </div>
        <div class="col-12 text-center">
        <br>
            <%= link_to "More info...", course_path(course), class: 'btn btn-lg btn-primary' %>
        </div>
    </div>
    <br>
    <hr class="col-8 offset-2 separator">
    <br class="clr">
    <% end %>

    <h1 class="dashboard-header">What I'm Teaching</h1>
    <br>
    <% current_user.courses.each do |course| %>
    <h3 class="text-center">
        <%= link_to course.title, course_path(course) %>
    </h3>
    <br>
        <%= image_tag course.image.url, class: 'img-fluid' %>
    <br>
    <div class="row">
        <div class="col-12">
        <br>
            <%= course.description %>
        </div>

        <div class="col-12 text-center">
        <br>
            <%= link_to "More Info...", course_path(course), class: 'btn btn-lg btn-primary' %>
        </div>
    </div>
    <% end %>
    <br>
    <br>
</div>