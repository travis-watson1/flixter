<br />

<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">Learn something today</h1>
  <br>
  <hr />
<br>
<br>
  <% @courses.each do |course| %>
    <h2 class="text-center">
      <%= link_to course.title, course_path(course) %>
    </h2>
    <br>
    <div class="row">
    <div class="col-sm-8 col-12 text-center">
      <%= course.description %>
    </div>
    <div class="col-sm-4 col-12 text-center">
    <br>
      <%= link_to 'More Details...', course_path(course), class: 'btn btn-primary btn-md' %>
    </div>
    <div class="col-sm-4 col-12 text-center">

                <% if @course.image.url %>
        <%= image_tag @course.image.url, class: 'img-fluid img-thumbnail' %>
        <% end %>

    </div>
  </div>
  <br class="clr">
  <% end %>
</div>